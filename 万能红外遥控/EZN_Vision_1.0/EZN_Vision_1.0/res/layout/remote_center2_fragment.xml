<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffdbdbdb"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:gravity="center_horizontal" >

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:background="@drawable/biankuang1" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="2dp"
                android:src="@drawable/tv32" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:text="海信电视"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:drawableRight="@drawable/no_sign" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffdbdbdb"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffdbdbdb"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn1"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_1"
                android:padding="15dp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_2"
                android:padding="15dp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_3"
                android:padding="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffdbdbdb"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn4"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_4"
                android:padding="15dp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_5"
                android:padding="15dp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_6"
                android:padding="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffdbdbdb"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn7"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_7"
                android:padding="15dp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_8"
                android:padding="15dp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_9"
                android:padding="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffdbdbdb"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/mute"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/mute1"
                android:padding="15dp" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_0"
                android:padding="15dp" />

            <Button
                android:id="@+id/return_tv"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/return_tv"
                android:padding="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/volumn_tv_add"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/left" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/channel_add"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/up" />

                <Button
                    android:id="@+id/channel_minus"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/down" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/volumn_tv_minus"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="@drawable/right"
                    android:textSize="35sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>